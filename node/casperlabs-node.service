[Unit]
Description=CasperLabs Node
Requires=casperlabs-engine-grpc-server.service
After=network.target casperlabs-engine-grpc-server.service
BindsTo=casperlabs-engine-grpc-server.service

[Service]
ExecStart=/usr/bin/casperlabs-node --config-file=/etc/casperlabs/default-configuration.toml run --server-data-dir=/etc/casperlabs
User=casperlabs-node
Restart=no

[Install]
WantedBy=multi-user.target
